### Disk layout

# Use entire disk
 d-i partman-auto/expert_recipe string         \
   boot-root ::                                \
     1 1 1 free                                \
       $bios_boot{ }                           \
       method{ biosgrub }                      \
     .                                         \
     256 256 256 fat32                         \
       $primary{ }                             \
       $iflabel{ gpt }                         \
       $reusemethod{ }                         \
       method{ efi } format{ }                 \
       mountpoint{ /boot/efi }                 \
     .                                         \
     512 512 512 ext4                          \
       $primary{ }                             \
       $bootable{ }                            \
       method{ format } format{ }              \
       use_filesystem{ } filesystem{ ext4 }    \
       mountpoint{ /boot }                     \
     .                                         \
     1024 102400000 1000000000 ext4            \
       $lvmok{ }                               \
       method{ format } format{ }              \
       use_filesystem{ } filesystem{ ext4 }    \
       mountpoint{ / }                         \
       lv_name{ root }                         \
     .                                         \
     200% 200% 200% linux-swap                 \
       $lvmok{ }                               \
       method{ swap } format{ }                \
       lv_name{ swap }                         \
     .

